/* pages/order/index.wxss */
.user{
  width: 100%;
  height: 40vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #f5f5f5;
}
.head{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.head image{
  width: 100%;
}
.user .name{
  margin: 30rpx 0;
  font-size: 0.9em;
  color: #888;
}
.money{
  font-size: 0.8em;
  color: #e64340;
  font-weight: bold;
}