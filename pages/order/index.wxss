/* pages/order/index.wxss */
.user{
  width: 100%;
  height: 40vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  background-color: #f5f5f5;
}
.red{
  color: #e64340;
}
.user-head{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-head image{
  width: 100%;
  height: 100%;
}
.user .user-name{
  margin: 30rpx 0;
  font-size: 0.9em;
  color: #888;
}
.user-money{
  font-size: 0.8em;
  color: #e64340;
  font-weight: bold;
}

.bill-list{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.bill-header{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}
.bill-header text{
  font-size: 0.8em;
  font-weight: bold;
}
.about{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #333;
  color: #fff;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bill{
  width: 100%;
  box-sizing: border-box;
}
.alone-bill{
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  padding: 0 3%;
  display: flex;
  align-items: center;
  border: 1rpx solid #eeeeee;
  border-radius: 5rpx;
  margin-bottom: 15rpx;
  box-shadow: 0rpx 3rpx 10rpx #eee;
}
.alone-bill text{
  color: #333;
  font-size: 0.7em;
}
.f2{
  flex: 2;
}
.f1{
  flex: 1;
  text-align: right;
}
.product-money{
  color: #e64340 !important;
  font-weight: bold;
}
.clear{
  width: 100%;
  background-color: #f5f5f5;
  box-shadow: none;
}
.clear text{
  color: #888 !important;
}
